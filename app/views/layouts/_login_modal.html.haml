#login-modal.modal.fade{"aria-hidden" => "true", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4.modal-title
          Login
      .modal-body
        = simple_form_for :user, url: log_in_path do |f|
          .form-group
            = f.input :email, label: false, placeholder: 'Email address'
          .form-group
            = f.input :password, label: false, placeholder: 'Password'
          = f.submit 'Login', class: 'btn btn-primary'
      .modal-footer
        %small
          Not a member?
          %a.signup{href: "#"} Sign up now!
        %br/
        %small
          %a{href: "#"} Forgotten password?

